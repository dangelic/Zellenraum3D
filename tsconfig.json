{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./out",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}